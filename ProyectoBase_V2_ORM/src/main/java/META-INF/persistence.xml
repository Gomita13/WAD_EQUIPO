<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

    <mapping-file>mapping.xml</mapping-file>
    <class>com.ipn.mx.modelo.entidades.AlumnoEntity</class>
      <class>com.ipn.mx.modelo.entidades.CarreraEntity</class>
      <class>com.ipn.mx.modelo.entidades.UsuarioEntity</class>
      <properties>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/EscuelaWeb"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
